<Window x:Class="Notadesigner.ConwaysLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:life="clr-namespace:Notadesigner.ConwaysLife.Game"
        Title="Conway's Life" Height="575" Width="1000" VerticalAlignment="Stretch" Icon="/ConwaysLife;component/app.ico">
	<DockPanel Name="layout">
		<ToolBar DockPanel.Dock="Top">
			<Button Content="Start" Name="btnStart" Height="23" Width="75" Margin="5" Click="toggleStart_Click" />
			<Button Content="Add Tile" Name="btnAdd" Height="23" Width="75" Margin="5" Click="addTile_Click" />
			<Button Content="Clear" Name="btnClear" Height="23" Width="75" Margin="5" Click="clear_Click" />
			<Button Content="Next Tile" Name="btnNextTile" Height="23" Width="75" Margin="5" Click="nextTile_Click" />
		</ToolBar>
		<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
			<life:TileView x:Name="view" DockPanel.Dock="Top" Margin="10" Click="view_Click"></life:TileView>
		</ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <life:TilePanelView x:Name="tpview" DockPanel.Dock="Top" Margin="10" Click="tpview_Click"></life:TilePanelView>
        </ScrollViewer>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <life:PaletteView x:Name="paletteview" DockPanel.Dock="Top" Margin="10" Click="paletteview_Click"></life:PaletteView>
        </ScrollViewer>
    </DockPanel>
</Window>
