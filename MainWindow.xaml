<Window x:Class="Notadesigner.ConwaysLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:life="clr-namespace:Notadesigner.ConwaysLife.Game"
        Title="Level Editor" Height="575" Width="1000" VerticalAlignment="Stretch" Icon="/ConwaysLife;component/app.ico">
    <DockPanel Name="layout">
        <ToolBar DockPanel.Dock="Top">
          
            <Button Content="tstLoad" Name="btnLoad" Height="23" Width="75" Margin="5" Click="tstLoad_Click" />
            <Button Content="Clear" Name="btnClear" Height="23" Width="75" Margin="5" Click="clear_Click" />
          
        </ToolBar>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <life:TilePanelView x:Name="tpview" DockPanel.Dock="Top" Margin="10" Click="tpview_Click"></life:TilePanelView>
        </ScrollViewer>
        <life:TileView x:Name="view" DockPanel.Dock="Top"  Margin="10" Click="view_Click"></life:TileView>
        <life:SelectedColourView x:Name="scview" DockPanel.Dock="Top" Margin="10" Click="scview_Click" Height="83"></life:SelectedColourView>
        <life:PaletteView x:Name="paletteview" DockPanel.Dock="Top" Margin="10,10" Click="paletteview_Click" Height="83"></life:PaletteView>
        
        <Button Content="tstSave" Name="btntstSave" DockPanel.Dock="Left" Height="25" Width="75" Margin="10,0,5,91" Click="tstSave_Click" HorizontalAlignment="Left" MinWidth="75" MinHeight="25" VerticalAlignment="Bottom" />
    </DockPanel>
</Window>
